<%- include('../partials/header') %> 
<h3>N E W  // F L I G H T</h3>
<form action="/flights" method="POST">
    <label for="airline">Select Your Airline:
        <select name="airline" id="airline">
            <option value="American">American</option>
            <option value="Delta">Delta</option>
            <option value="Southwest">Southwest</option>
            <option value="United">United</option>
        </select>
    </label>
    <label for="airport">Choose Airport:
        <select name="airport" id="airport">
            <option value="ATL">ATL</option>
            <option value="LAX">LAX</option>
            <option value="DFW">DFW</option>
            <option value="DEN" selected>DEN</option>
            <option value="SAN">SAN</option>
        </select>
    </label>
    <label for="departs">Choose your departure date:</label>
        <input type="datetime-local" id="departs"
            name="departs" value="2022-09-23T05:00"
            min="2021-09-23T00:00" max="2023-08-29T00:00">
    <input type="submit" value="ADD FLIGHT">
</form>
</main>
</body>
</html>